<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_listdaerah"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/putih"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/background_putih"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="264dp"
            >

            <TextView
                android:id="@+id/listdaerah_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Data Penyebaran Daerah COVID-19"
                />

            <TextView
                android:id="@+id/listdaerah_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listdaerah_title"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="Terakhir diperbaharui 14 April 2020"
                />
            
            <RelativeLayout
                android:id="@+id/list_header"
                android:layout_below="@+id/listdaerah_timestamp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="24dp"
                android:background="@color/abu"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Provinsi"
                    android:textAlignment="center"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="155dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/kuning"
                    android:text="P"
                    android:textAlignment="center"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="223dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/hijau"
                    android:text="S"
                    android:textAlignment="center"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="290dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/merah"
                    android:text="M"
                    android:textAlignment="center"
                    android:gravity="center"
                    />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listdaerah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/list_header"
                tools:listitem="@layout/item_row_listdaerah"
                />

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>